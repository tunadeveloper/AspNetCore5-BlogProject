@using BlogProject.EntityLayer.Concrete
@model Newsletter

<div class="col-lg-4 subscribe-main footer-grid-agileits-w3ls text-left">
	<h2>Signup to our newsletter</h2>
	<div class="subscribe-main text-left">
		<div class="subscribe-form">
			@using (Html.BeginForm("Subscribe", "Newsletter", FormMethod.Post)){
				@Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "E-Posta Adresi..." })
				<button type="submit" class="btn btn-primary submit">Gönder</button>
			}
			<div class="clearfix"> </div>
		</div>
		<p>Gizliliğinize saygı duyuyoruz. Asla spam göndermiyoruz!</p>
	</div>
	<!-- //subscribe -->
</div>